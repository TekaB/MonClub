{% extends 'base.html.twig' %}
{% set page_title = 'MonClub - Modifier mon club' %}
{% block content %}
    <div class="card mx-3">
        <div class="card-header text-primary">Les infos de mon club</div>
        {% if club.club.image %}
            <img class="mx-3 mt-3" src="{{ '/uploads/club_images_directory/' ~ club.club.image }}" alt="Logo {{ club.club.nom }}" width="100px">
        {% endif %}
        <div class="card-body">
            {{ form_start(form) }}
            <div class="mb-3 form-group">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'text-primary mb-0'}}) }}
                {{ form_widget(form.nom) }}
            </div>
            <div class="form-group">
                {{ form_label(form.image, null, {'label_attr': {'class': 'text-primary mb-0'}}) }}
                {{ form_widget(form.image) }}
            </div>
            <button class="btn btn-primary">Valider</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}